<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gabarito"
                android:text="Add Task"
                android:layout_marginBottom="5dp"
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <View
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:background="@color/purple"
                android:layout_marginBottom="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grayLight"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/gabarito"

                android:text="Task Name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:inputType="textCapSentences"
                android:background="@drawable/corner_input"
                android:fontFamily="@font/gabarito"
                android:hint="Sample Task Name"
                android:maxLength="50"
                android:padding="10dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/gabarito"
                android:text="Task Description"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/corner_input"
                android:fontFamily="@font/gabarito"
                android:hint="Complete Task Board"
                android:inputType="textMultiLine"
                android:lines="3"
                android:gravity="top"
                android:maxLength="50"
                android:padding="10dp"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/corner_input"
                    android:backgroundTint="@color/grayLight"
                    android:fontFamily="@font/gabarito"
                    android:text="Cancel"
                    android:textColor="@color/grayDark"
                    android:textSize="17sp"
                    app:backgroundTint="@color/grayLight" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_input"
                    android:fontFamily="@font/gabarito"
                    android:text="Done"
                    android:textSize="17sp"
                    app:backgroundTint="@color/purple" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</FrameLayout>